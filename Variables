x = "awesome"

def myfunc():
  print("Python is " + x)

myfunc() # Create a variable outside of a function, and use it inside the function

x = "awesome"

def myfunc():
  x = "fantastic"
  print("Python is " + x)

myfunc()

print("Python is " + x)   # Create a variable inside a function, with the same name as the global variable

def myfunc():
  global x
  x = "fantastic"

myfunc()

print("Python is " + x) # global keyword, the variable belongs to the global scope

x = "awesome"

def myfunc():
  global x
  x = "fantastic"

myfunc()

print("Python is " + x)  # to change global veriable in function, refer to the variable by using the global keyword
